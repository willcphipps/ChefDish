@{
    ViewData["Title"] = "Home Page";
}
@model List<CatChef>


<div class="m-2 float-right">
    <h3><a href="/AddChef">Add Cat</a></h3>
</div>
<div class="m-5 text-center">
    <h1>Chefs  |  <a href="/Dishes">Dishes</a></h1>
</div>
    <div class="col-lg-12">
        <h3>Cat Chefs</h3>
        <table class="table table-striped table-inverse">
            <thead class="thead-inverse">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Cat Type</th>
                    <th>Born</th>
                    <th>Recipes</th>
                    
                </tr>
                </thead>
                <tbody>
                    @foreach(var cat in Model){
                    <tr>
                        <td scope="row">@cat.FirstName</td>
                        <td>@cat.LastName</td>
                        <td>@cat.CatType</td>
                        <td>@cat.Birthday.ToShortDateString() </td>
                        <td>@cat.Recipes.Count</td>
                    </tr>
                  }
                </tbody>
        </table>
    </div>